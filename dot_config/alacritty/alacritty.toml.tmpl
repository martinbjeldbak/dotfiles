import = [
  "~/.config/alacritty/catppuccin-frappe.toml"
]

[env]
TERM = "xterm-256color"

[font]
size = 16

[font.bold]
family = "JetBrainsMono Nerd Font"
style = "Bold"

[font.italic]
family = "JetBrainsMono Nerd Font"

[font.normal]
family = "JetBrainsMono Nerd Font"
style = "Regular"

[window]
{{- if eq .chezmoi.os "darwin" }}
decorations = "buttonless"
option_as_alt = "Both"
{{- end }}
dynamic_padding = false
opacity = 0.9

[window.padding]
x = 25
y = 20
