    // Choose the order of the modules
    "modules-left": [
        "custom/launcher",
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        "clock#week",
		"clock#time",
		"clock#date"
    ],
    "modules-right": [
		"network",
		"backlight",
		"pulseaudio",
		"battery",
		"tray"
    ],
